<script>
   var isLogin = localStorage.getItem("isLogin")
   console.log(isLogin)
    if (isLogin != 1) {
         window.location.replace("/login");
    }
    var allMethods = {
        // videoElem: $("#video")[0],
        tab: function () {
            var $categoryType = $(".category ul li"),
                $categoryCont = $(".category-cont .content-list")

            $categoryType.on('click', function () {
                var $this = $(this),
                    index = $(this).index()

                $this.addClass('selected').siblings().removeClass('selected')
                $categoryCont.eq(index).show().siblings().hide()

                //暂停视频播放
                allMethods.videoStop()
            })

        },
        videoStop: function () {        //视频暂停
            // allMethods.videoElem.pause()
            $("video").each(function(i, elem) {     //所有视频暂停播放
                elem.pause()
            })
        },
        // videoPlay: function() {         //视频播放
        //     allMethods.videoElem.play()
        // },
        popup: function() {         //弹窗
            $(".popup-box").click(function() {
                $(this).hide()
            })
            $(".popup-content").click(function(e) {
                e.stopPropagation()
            })
            $(".popup-content .popup-close").click(function() {
                $(".popup-box").hide()
            })
        }
    }
    $(function () {
        allMethods.tab()
        allMethods.popup()
    })
    $(".teaching-ppt li").click(function () {
        var LessonNum = $(this).children("input").attr('name');
        $(this).addClass('selected').siblings().removeClass('selected')
