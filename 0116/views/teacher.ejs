            './pdfjs/web/viewer.html?file=/pdf/Lesson ' + LessonNum +
            '/Presentation.pdf');
        $('#CatalogOne').html(' > ' + $(this).children("input").val())
    })

    $(".teaching-plan li").click(function() {
        var LessonNum = $(this).children("input").attr('name');
        $(this).addClass('selected').siblings().removeClass('selected')
        $('#TeachPlanPDF').attr('src',
            './pdfjs/web/viewer.html?file=/pdf/Lesson ' + LessonNum +
            '/Teacher Workbook.pdf');
        $('#CatalogOne').html(' > ' + $(this).children("input").val())
    })

    $(".map-download li").click(function() {
        var LessonNum = $(this).children("input").attr('name');
        $(this).addClass('selected').siblings().removeClass('selected')
        $('#map-download-link')
        .attr('href',
            './pdf/Lesson ' + LessonNum +
            '/Lesson'+ LessonNum +'_CN.mcworld')
            .attr("download", "Lesson_CN"+ LessonNum +".mcworld")
            .text("World" + LessonNum  + "点击下载")
    })

    //切换视频
